<Say::Hint @size="small" @type="sectioned" as |hint|>
	<hint.header>
		Wil u <strong>{{info.person.fullName}}</strong> toevoegen?
	</hint.header>
	<hint.list as |list|>
    {{#each personCombinedWithProperties as |mp| }}
      <list.item>
				<Say::Button @width="narrow" @onClick={{action 'refer' mp}}>
					Voeg toe als {{mp.prop.label}}
				</Say::Button>
      </list.item>
    {{/each}}
  </hint.list>
</Say::Hint>
{{yield}}
